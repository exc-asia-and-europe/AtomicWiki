<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <editor default="wiki"/>
    <!-- 
        The root collection which should be scanned for wiki feeds.
        Relative paths will be resolved relative to the app root.
    -->
    <root>data</root>
    <users>
        <!-- 
            Additional user domains, e.g. in an LDAP realm can be configured
            here. This requires the corresponding user realm to be set up properly in eXist.
        -->
        <!--domain name="AD">ad.my-domain.org</domain-->
        <!--
        	Only database users listed in an allow element can
        	log into the wiki. This restriction is disabled if no
        	allow element is present.
        -->
        <!--
        <allow user="editor"/>
        <allow user="admin"/>
        -->
    </users>
    <slideshows-enabled>true</slideshows-enabled>
    <!-- 
        Append the following domain to all login names (except admin).
        This is useful if authentication is handled by an LDAP server.
    -->
    <image-server>http://kjc-sv016.kjc.uni-heidelberg.de</image-server>
    <image-server-port>8600</image-server-port>
    <login-domain/>
</configuration>